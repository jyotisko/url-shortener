extends base

block content 
  header.header 
    .header__left 
      p.paragraph-primary.u-mb-small
         |A free, blazing fast, and highly customizable url shortener!
      a(href='#section__demo').btn.btn--fill.u-mr-small Get Started
      if user 
        a(href='/dashboard').btn.btn--outlined Dashboard

    .header__right 
      img(src='/img/hero-svg.svg' alt='Hero SVG')
    .header__arrow
      a(href='#section__demo')
        img(src='/img/down-arrow.svg' alt='Down Arrow')

  main.main
    section.section__features 
      h1.heading--primary.u-center-text.u-mb-medium Why Su.ly?
      .features 
        .feature__box.feature__box--1 
          i.fas.fa-money-bill-wave.u-mb-small
          h2.heading--secondary.u-mb-micro Free to use
          p.paragraph--secondary Su.ly is a free forever URL shortener!
        .feature__box.feature__box--2 
          i.fas.fa-edit.u-mb-small
          h2.heading--secondary.u-mb-micro Highly customizable
          p.paragraph--secondary Customize and edit your URLs with ease!
        .feature__box.feature__box--3 
          i.fas.fa-dumbbell.u-mb-small
          h2.heading--secondary.u-mb-micro Permanent URLs
          p.paragraph--secondary All URLs generated by Su.ly are permanent! Use them for as long as you wish.

    section.section__demo#section__demo 
      h1.heading--primary.u-center-text.u-mb-small Try it out!
      p.paragraph--secondary.u-center-text.u-mb-medium= `${user ? 'Create a short URL! You are already logged in, new URLs will be stored in dashboard!' : 'Create a short URL within seconds! Login to customise, edit, and manage your URLs!'}`
      form.create-url#home-create-url(data-user=user ? user._id : null)
        label(for='url-input')
        input#url-input(type='text' placeholder='Enter URL to shorten' required)

        a.create-url__btn.create-url__btn--copy.hidden.btn--squared Copy!
        button(type='submit').create-url__btn.create-url__btn--shorten.btn.btn--squared Shorten!