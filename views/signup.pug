extends base

block content 
  section.form-section 
    .form-container 
      form.form.form--signup
        h2.heading--primary.u-mb-medium Create a new account

        .form__group 
          label(for='name').form__label.u-mb-micro Name 
          input#name.form__input(name='name' type='text' placeholder='Your Name' required)
        .form__group 
          label(for='email').form__label.u-mb-micro Email 
          input#email.form__input(name='email' type='email' placeholder='you@example.com' required)
        .form__group 
          label(for='password').form__label.u-mb-micro Password 
          input#password.form__input(name='password' type='password' placeholder='••••••••' required minlength=8)
        .form__group 
          label(for='passwordConfirm').form__label.u-mb-micro Confirm Password 
          input#passwordConfirm.form__input(name='passwordConfirm' type='password' placeholder='••••••••' required minlength=8)
        
        button.btn.btn--fill.btn--submit-signup Signup