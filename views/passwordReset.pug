extends base

block content
  section.section.section--password-reset
    - if (user && user.verified === true) 
        p.paragraph--secondary.u-mb-small You are already logged in.
        p If you want want to update your password, please do so from your user profile.

    - else
        .form__container
          form.form.form--password-reset
            h2.heading--primary.u-mb-small Reset Password 
            .form__group 
              label(for='password').form__label.u-mb-micro New password 
              input#password.form__input(name='password' type='password' placeholder='••••••••' required minlength=8)
            .form__group 
              label(for='passwordConfirm').form__label.u-mb-micro Confirm new password
              input#passwordConfirm.form__input(name='passwordConfirm' type='password' placeholder='••••••••' required minlength=8)
            button.btn.btn--fill.btn--reset-password Reset Password